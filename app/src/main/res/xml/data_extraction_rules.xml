<?xml version="1.0" encoding="utf-8"?>
<!--
   Exclude ALL app data from cloud backup and device-to-device transfer.
   A Bitcoin wallet must never have its data backed up to cloud services or
   transferred to another device â€” seed phrases and security config could leak.
-->
<data-extraction-rules>
    <cloud-backup>
        <exclude domain="root" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
    </cloud-backup>
    <device-transfer>
        <exclude domain="root" path="." />
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
    </device-transfer>
</data-extraction-rules>